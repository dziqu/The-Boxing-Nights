package Inne;

import java.io.File;
import java.math.BigInteger;

import Enumy.ELokalizacjeINazwy;

public class Iteracje {
	
	public static void inkrementujLiczbêUruchomieñProgramu() {
		String liczbaStr = IO.skanujS(new File(ELokalizacjeINazwy.PLIK_USTAWIEÑ_WYSWIETLANIA.zwróæLokalizacjê()));
		IO.drukujL(liczbaStr + " a");
		BigInteger liczba = new BigInteger(liczbaStr);
		if (!Porównania.regexLiczba(liczbaStr)) liczba = new BigInteger("0"); 
		else liczba = new BigInteger(liczbaStr);
		
		liczba.add(new BigInteger("1"));
		IO.drukuj(new File(ELokalizacjeINazwy.PLIK_USTAWIEÑ_WYSWIETLANIA.zwróæLokalizacjê()), String.valueOf(liczba));
	}

}
