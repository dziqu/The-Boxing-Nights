package PakietyPodstawowe.Model.Inne;

import java.io.File;
import java.io.IOException;
import java.util.List;
import org.apache.commons.io.FileUtils;
import PakietyPodstawowe.Model.Enumy.EZnakiSpecjalne;
import PakietyPodstawowe.Model.Interfejsy.IIO;

/**
 * Klasa reprezentuj¹ca wyœwietlanie i pobieranie
 * danych.
 */
public abstract class IO implements IIO {
	
	/**
	 * Drukuje tekst.
	 * @param s tekst
	 */
	public static <T> void drukuj(T s) { System.out.print(s); }
	
	/**
	 * Drukuje tekst.
	 * @param lista lista do wydrukowania
	 */
	public static <T> void drukuj(List<T> lista) { lista.forEach(System.out::print); }
	
	/**
	 * Drukuje tekst.
	 * @param plik plik do zapisu
	 * @param s tekst
	 * @throws IOException wyj¹tek IOException
	 */
	public static <T> void drukuj(File plik, T s) throws IOException {
		FileUtils.writeStringToFile(plik, String.valueOf(s));
	}
	
	/**
	 * Drukuje tekst.
	 * @param plik plik do zapisu
	 * @param lista lista do zapisu
	 * @throws IOException wyj¹tek IOException
	 */
	public static <T> void drukuj(File plik, List<T> lista) throws IOException { 
		String linia = lista.stream().map(e -> String.valueOf(e)).reduce(pustyString, (a, e) -> a+e);
		drukuj(plik, linia);
	}
	
	public static <T> void drukujL(T s) { System.out.println(s); }
	
	public static <T> void drukujL(List<T> lista) { lista.forEach(System.out::println); }
	
	public static <T> void drukujL(File plik, List<T> lista) throws IOException { 
		String linia = lista.stream().map(e -> String.valueOf(e)).reduce(pustyString, (a, e) -> a+e+nowaLinia);
		drukuj(plik, linia);
	}
	
	public static List<String> skanuj(File plik) throws IOException { return FileUtils.readLines(plik); }
	
	public static String skanujS(File plik) throws IOException {
		return FileUtils.readLines(plik).stream().map(e -> String.valueOf(e)).reduce(pustyString, (a, e) -> a+e);
	}
	
	public static String skanujSL(File plik) throws IOException {
		return FileUtils.readLines(plik).stream().map(e -> String.valueOf(e)).reduce(pustyString, (a, e) -> a+e+nowaLinia);
	}
	
	private static <T> T inicjujObiekt(T o ) { return o; }
	
	private static final String pustyString = inicjujObiekt(EZnakiSpecjalne.PUSTY_STRING.zwróæZnak());
	private static final String nowaLinia = inicjujObiekt(EZnakiSpecjalne.NOWA_LINIA.zwróæZnak());

}
