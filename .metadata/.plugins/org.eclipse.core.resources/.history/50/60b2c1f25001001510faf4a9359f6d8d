    	NiftyJmeDisplay niftyDisplay = new NiftyJmeDisplay(assetManager, inputManager, audioRenderer, viewPort);
        nifty = niftyDisplay.getNifty();
        nifty.fromXml(ENazwy.ŒCIE¯KA_DO_WIDOKU_MENU_G£ÓWNEGO.zwróæLokalizacjê(), ENazwy.NAZWA_MENU_G£ÓWNEGO.zwróæLokalizacjê(), kontrolerMenuG³ównego);
