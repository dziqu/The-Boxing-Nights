package PakietyPodstawowe.Kontroler;

import org.bushe.swing.event.EventServiceExistsException;
import org.bushe.swing.event.EventServiceLocator;

import Enumy.ENazwy;
import PakietyPodstawowe.Model.ModelMenuG³ównego;
import PakietyPodstawowe.Model.ModelMenuNowejGry;

import com.jme3.app.Application;
import com.jme3.app.SimpleApplication;
import com.jme3.app.state.AbstractAppState;
import com.jme3.app.state.AppStateManager;
import com.jme3.niftygui.NiftyJmeDisplay;

import de.lessvoid.nifty.Nifty;
import de.lessvoid.nifty.screen.Screen;
import de.lessvoid.nifty.screen.ScreenController;

/**
 *
 * @author Filip
 */
public final class KontrolerMenuNowejGry extends AbstractAppState implements
		ScreenController {

	private ModelMenuNowejGry modelMenuNowejGry;
	private SimpleApplication app;
	private AppStateManager stateManager;
	private Nifty nifty;
	private Screen screen;

	@Override
	public void initialize(AppStateManager stateManager, Application app) {
		try {
			super.initialize(stateManager, app);
			this.modelMenuNowejGry = new ModelMenuNowejGry();
			this.app = (SimpleApplication) app;
			this.stateManager = this.app.getStateManager();
			nowaGra();
		} catch (Exception ex) {
			ex.printStackTrace();
		}
	}

	public void nowaGra() {
		 NiftyJmeDisplay niftyDisplay = new NiftyJmeDisplay(assetManager, inputManager, audioRenderer, viewPort);
	        nifty = niftyDisplay.getNifty();

	        nifty.fromXml(ENazwy.ŒCIE¯KA_DO_WIDOKU_MENU_NOWEJ_GRY.zwróæLokalizacjê(), ENazwy.NAZWA_MENU_NOWEJ_GRY.zwróæLokalizacjê(), kontrolerMenuNowejGry);
	        stateManager.attach(kontrolerMenuNowejGry);
	        guiViewPort.addProcessor(niftyDisplay);
	}

	public void anuluj() {
		try {
			EventServiceLocator.setEventService("NiftyEventBus", null);
			stateManager.attach(new KontrolerMenuG³ównego());
		} catch (EventServiceExistsException ex) {
		}
	}

	public void bind(Nifty nifty, Screen screen) { 
		this.nifty = nifty;
		this.screen = screen;
	}

	public void onStartScreen() {

	}

	public void onEndScreen() {
	}

}
