package PakietyPodstawowe.Model.Interfejsy;

import java.io.File;
import java.io.IOException;
import java.util.Arrays;
import java.util.List;
import java.util.stream.*;

import org.apache.commons.io.FileUtils;

public interface IIO {
	
	public static <T> void drukuj(T s) { System.out.print(s); }
	
	@SafeVarargs
	public static <T> void drukuj(T ... s) {
		String wiadomoœæ = "";
		Arrays.asList(s).stream().map(linia -> String.valueOf(linia)).map(linia -> linia+=linia).forEach(linia -> drukuj(linia));
	}
	
	public static <T> void drukuj(List<T> lista) { lista.forEach(s -> drukuj(s)); }
	
	public static <T> void drukuj(File plik, T s) {
		try { FileUtils.writeStringToFile(plik, String.valueOf(s)); } 
		catch (IOException e) { e.printStackTrace(); }
	}
	
	public static <T> void drukuj(File plik, T ... s) {
		/*
		 * Nie dzia³a poprawnie
		 */
		List <T> lista = Arrays.asList(s);
		lista.forEach(t -> drukuj(plik, t));
	}
	
	public static <T> void drukujL(T s) { System.out.println(s); }
	
	public static <T> void drukujL(List<T> lista) { lista.forEach(s -> drukujL(s)); }

}
