package Inne;

import java.io.File;
import java.math.BigInteger;

import Enumy.ENazwy;

public class Iteracje {
	
	public static BigInteger inkrementujLiczbêUruchomieñProgramu() {
		List <String> listaDanych = IO.skanuj(new File(ENazwy.PLIK_PRZECHOWUJ¥CY_LICZBÊ_URUCHOMIEÑ_PROGRAMU.zwróæLokalizacjê()));
		String liczbaStr = IO.skanujS();
		BigInteger liczba = null;
		if (!Porównania.regexLiczba(liczbaStr) || Porównania.porównaj(liczbaStr, "") == 0) liczba = new BigInteger("0"); 
		else liczba = new BigInteger(liczbaStr);
		
		liczba = liczba.add(BigInteger.valueOf(1));
		IO.drukuj(new File(ENazwy.PLIK_PRZECHOWUJ¥CY_LICZBÊ_URUCHOMIEÑ_PROGRAMU.zwróæLokalizacjê()), String.valueOf(liczba));
		return liczba;
	}

}
